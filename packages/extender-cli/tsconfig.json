{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ES2015",
        "moduleResolution": "Node",
        "lib": [
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020",
            "ES2021",
            "DOM"
        ],
        "strict": false,
        "noEmitOnError": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "outDir": "lib",
        "rootDir": "src",
        "declaration": true,
        "declarationDir": "types"
    },
    "include": ["src/**/*.ts", "src/**/*.js", "index.d.ts"],
    "exclude": ["node_modules"]
}
