{
    "forEach": "apps",
    "filename": "packages/app-{{kebabCase name}}/src/index.tsx",
    "once": true
}
---
import { createRoot } from "react-dom/client";
import { App } from "@{{$.scope}}/base";

function AppContent() {
    return <>
        <div className="w-full h-full flex flex-col justify-center items-center">
            <h1 className="text-4xl font-bold">{{capitalCase name}}</h1>
            <p className="text-sm text-gray-500">This app is not completed yet.</p>
        </div>
    </>;
}

const root = createRoot(document.getElementById("root"));
root.render(
    <App headerMiddle={"Version {{$.version}}"}>
        <AppContent />
    </App>
);
